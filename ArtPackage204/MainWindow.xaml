<Window x:Class="ArtPackage204.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArtPackage204"
        mc:Ignorable="d"
        Title="Map Designer" Height="750" Width="750"
        Background="SlateGray">
    <Viewbox Stretch="Uniform">
    <Grid>
        <ComboBox Height="50" Width="200" Name="newmap"  IsEditable="True" Text="       Choose a size for the map" Margin="142,242,142,192" >
            <ComboBoxItem>
                <Button Content="10x10" Click="Button_Click" Width="190" Height="20"/>
            </ComboBoxItem>
            <ComboBoxItem>
                <Button Content="15x15" Click="Button_Click_1" Width="190" Height="20"/>
            </ComboBoxItem>
                <ComboBoxItem>
                    <Button Content="20x20" Click="Button_Click_2" Width="190" Height="20"/>
                </ComboBoxItem>
            </ComboBox>
        <TextBlock Text="" Width="750" Height="100" Margin="-25,154,-25,480" TextAlignment="Center" FontSize="30"/>
            <Button x:Name="button" Content="Test SQL Connection" HorizontalAlignment="Center" Margin="0,451,0,0" VerticalAlignment="Top" Click="button_Click_4"/>
        </Grid>
    </Viewbox>
</Window>
