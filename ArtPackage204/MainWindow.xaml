<Window x:Class="ArtPackage204.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArtPackage204"
        mc:Ignorable="d"
        Title="Map Designer" Height="750" Width="750"
        Background="SlateGray">

    <Grid>
        <InkCanvas Name="myInkCanvas" MouseRightButtonDown="RightMouseUpHandler">
            <InkCanvas.Background>
                <LinearGradientBrush>
                    <GradientStop Color="Red" Offset="0.1" />
                    <GradientStop Color="Orange" Offset="0.3" />
                    <GradientStop Color="Yellow" Offset="0.3" />
                    <GradientStop Color="Green" Offset="0.3" />
                    <GradientStop Color="Blue" Offset="0.3" />
                    <GradientStop Color="Purple" Offset="0.1" />
                    <GradientStop Color="HotPink" Offset="0.1" />
                </LinearGradientBrush>
            </InkCanvas.Background>
        </InkCanvas>
        <ComboBox Height="50" Width="200" Name="newmap"  IsEditable="True" Text="Create a new map or load a map" Margin="142,242,142,192">
            <ComboBoxItem>
                <Button Content="10x10" Click="Button_Click" Width="190" Height="20"/>
            </ComboBoxItem>
            <ComboBoxItem>
                <Button Content="15x15" Click="Button_Click_1" Width="190" Height="20"/>
            </ComboBoxItem>
            <ComboBoxItem>
                <Button Content="20x20" Click="Button_Click_2" Width="190" Height="20"/>
            </ComboBoxItem>
            <ComboBoxItem>
                <Button Content="Load" Click="Button_Click_3" Width="190" Height="20"/>
            </ComboBoxItem>
        </ComboBox>
    </Grid>
</Window>
